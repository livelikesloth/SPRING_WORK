<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 자주 사용하는 type의 별칭을 등록해 놓고 Mapper.xml에서 사용할 수 있다. -->
	<typeAliases>
		<typeAlias type="com.livelikesloth.step03.member.dto.MemberDto" alias="memberDto" />
	</typeAliases>
	<!-- 사용할 Mapper xml 문서 등록하기 -->
	<mappers>
		<mapper resource="com/livelikesloth/step03/mybatis/MemberMapper.xml" />
		<mapper resource="com/livelikesloth/step03/mybatis/TodoMapper.xml" />
	</mappers>


</configuration>
